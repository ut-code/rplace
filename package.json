{
  "name": "rplace",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "npm run backend:build && npm run serve:dev",
    "release": "npm run build && npm run serve",
    "test": "npm run precommit && npm run release",
    "serve:dev": "(trap 'kill 0' SIGINT; npx vite & npm run serve & wait)",
    "build": "npx tsc && npm run frontend:build && npm run backend:build",
    "frontend:dev": "npx vite",
    "backend:dev": "npm run backend:build && npm run backend:serve",
    "frontend:build": "vite build ./ --outDir vite-dist --emptyOutDir",
    "backend:build": "rm -rf tsc-dist && tsc",
    "serve": "node ./tsc-dist/main.js",
    "setup": "cp .env.sample .env && npm ci",
    "precommit": "(trap 'kill 0' SIGINT; (npm run fmt:silent && echo 'prettier finished') & (npm run lint && echo 'linter finished') & wait)",
    "fmt": "npx prettier . --write",
    "fmt:silent": "npx prettier . --write --log-level silent",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "cookie": "^0.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.0"
  }
}
